    <script>
        const urlParams = new URLSearchParams(window.location.search);
        const userName = urlParams.get('userName');
        const donationAmount = urlParams.get('donationAmount');
        const email = urlParams.get('email');
        const mobileNo = urlParams.get('mobileNo');
        const country = urlParams.get('country');
        const state = urlParams.get('state');
        const address = urlParams.get('address');
      
        // Update content with the retrieved details
        document.querySelector('p:nth-of-type(2)').textContent = 'Name: ' + userName;
        document.querySelector('p:nth-of-type(3)').textContent = 'Email: ' + email;
        document.querySelector('p:nth-of-type(4)').textContent = 'Phone No: ' + mobileNo;
        document.querySelector('p:nth-of-type(5)').textContent = 'Country: ' + country;
        document.querySelector('p:nth-of-type(6)').textContent = 'State: ' + state;
        document.querySelector('p:nth-of-type(7)').textContent = 'Address: ' + address;
        document.querySelector('p:nth-of-type(8)').textContent = 'Donation Amount: ' + donationAmount + ' INR';
      
        document.getElementById('downloadPdfButton').addEventListener('click', function() {
          // Include all details in the download PDF URL
          const downloadPdfUrl = `/generatePDF?userName=${userName}&email=${email}&mobileNo=${mobileNo}&country=${country}&state=${state}&address=${address}&donationAmount=${donationAmount}`;
          window.location.href = downloadPdfUrl;
        });
      </script>
      
        
    
