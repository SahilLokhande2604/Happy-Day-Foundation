          <a href="/admin/admin_vision">
            <span class="material-icons-sharp">
              remove_red_eye
            </span>
            <h3>Vision and Mission</h3>
          </a>
  
          <a href="/admin/admin_gallery">
            <span class="material-icons-sharp">
              collections
            </span>
            <h3>Gallery</h3>
