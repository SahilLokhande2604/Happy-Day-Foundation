        </div>
      </aside>
  
      <div class="right">
        <div class="top">
          <button id="menu-btn">
            <span class="material-icons-sharp">
              menu
            </span>
          </button>
        </div>
      </div>


      <main>
  <h1>Existing Users Details</h1>

              <!-- Display Existing Data in a Table -->
              <h2 class="mt-4">Existing Data</h2>
              <table class="table table-bordered table-hover">
                <thead class="thead-light">
                  <tr>
                    <th>Username</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% for (const contentElement of data) { %>
                    <tr>
                      <td>
                        <%= contentElement.username %>
                      </td>
                      <td>
                        <% if (data.length > 1) { %>
                          <form action="/admin/delete_existing_user" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="<%= contentElement._id %>">
                            <a href="/admin/confirm-delete/<%= contentElement._id %>" class="delete-btn">Delete</a>
                          </form>
                        <% } else { %>
                          <!-- Display a disabled button and a message -->
                          <button type="button" class="delete-btn" disabled>Delete</button>
                          <span class="text-muted">At least 1 admin should exist.</span>
                        <% } %>
                      </td>
                    </tr>
                  <% } %>
                  
                </tbody>
              </table>

            </main>

            <script src="/css/admin_sidebar_script.js"></script>  
</body>

