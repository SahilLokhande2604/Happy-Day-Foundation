<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Happy Day Foundation</title>
  <link rel="stylesheet" href="/css/style1.css">
  <link rel="stylesheet" href="css/header.css">
  <link rel="stylesheet" href="css/footer.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <style>
    #carouselExampleAutoplaying .carousel-item {
        transition: opacity 0.01s ease-in-out; /* Adjust the duration (1s) as needed */
    }
</style>
 
</head>

<body>
 
  <%- include("partials/header.ejs", { headerData: data.headerData,socialMediaData: data.socialMediaData }) %>

 

      <div id="carouselExampleAutoplaying" class="carousel slide carousel-zoom" data-bs-ride="carousel" data-bs-interval="2000" >
        <div class="carousel-inner slideshow-container" >
          <% for (const contentElement of data.homeImages.content) { %>
            <% let isFirstImage = true; %>
            <% for (const contentImage of contentElement.content_images) { %>
              <div class="carousel-item <%= isFirstImage ? 'active' : '' %>">
                <img src="/images/<%= contentImage %>" class="d-block w-100 top_img_cover" alt="Existing Content Image">
              </div>
              <% isFirstImage = false; %>
            <% } %>
          <% } %>
          
        </div>
        <!-- Controls... -->
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden"></span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleAutoplaying" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden"></span>
      </button>
    </div>



  <section class="section1">
    <div class="wraper box animation-target">
      <% for (const contentElement of data.homeData.content) { %>
        <% if (contentElement.content_element_name === 'contribute') { %>
          <div class="sec1_heading">
           <%= contentElement.content_title %>
          </div>
        <% } %>
      <% } %>

      <div class="sec1_para">
        <% for (const contentElement of  data.homeData.content) { %>
          <% if (contentElement.content_element_name === 'contribute') { %>
             <p><%= contentElement.content_description %></p>
          <% } %>
        <% } %>

      </div>
     
    </div>
  </section>
  <section class="stories box animation-target">

    
    <h2><%= data.storyData.top_title %></h2>
    
    <div class="storyvideos">
      
      <% for (const contentElement of  data.storyData.content) { %>
        <iframe
       
          src="<%= contentElement.content_description %>">
        </iframe>
    
      <% } %>

  </div>
  </section>
    <section class="our_partner animation-target">
      <div class="partner_container box ">
       
        <span class="animation-target">
        <% for (const contentElement of  data.homeData.content) { %>
          <% if (contentElement.content_element_name === 'partner') { %>
             <h2 class="partnertitle"> <%= contentElement.content_title %></h2>
          <% } %>
        <% } %>

        <% for (const contentElement of  data.homeData.content) { %>
          <% if (contentElement.content_element_name === 'partner') { %>
             <p class="partnerinfo"><%= contentElement.content_description %></p>
          <% } %>
        <% } %>
      </span>

        <div class="partnerimg">   
          <div>
                <div class="image-container">
                  <div class="image-wrapper">
                    <% for (const contentElement of  data.homeData.content) { %>
                      <% if (contentElement.content_element_name === 'partner') { %>
                        <% for (const contentImage of contentElement.content_images) { %>
                    <div>
                      <img src="/images/<%= contentImage %>" alt="">
                    </div>
                    <% } %>
                    <% } %>
                  <% } %>
                  </div>
                </div>
             
              </div>
         
         
        </div>
        
      </div>
    
  </section>


  
  <%- include("partials/footer.ejs",{footerData: data.footerData, socialMediaData: data.socialMediaData ,contactUsData: data.contactUsData}) %>


  <script src="/css/script.js"></script>
 
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
</body>

</html>











