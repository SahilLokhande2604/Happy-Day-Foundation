  <script>
    document.addEventListener('DOMContentLoaded', function () {
      // Initial graph type
      let graphType1 = 'day';
      let graphType2 = 'month';
  
      // Retrieve the donation data from the data attribute
      const data1 = JSON.parse(document.getElementById('dayChart').getAttribute('data-donation'));
      const data2 = JSON.parse(document.getElementById('monthChart').getAttribute('data-donation'));
  
      // Function to update the chart based on the selected graph type
      window.updateChart = function () {
        // Retrieve the selected graph type
        graphType1 = 'day';
        graphType2 = 'month';
  
        // Extract dates and amounts based on the selected graph type
        let chartData1;
        if (graphType1 === 'day') {
          chartData1 = {
            labels: data1.map(donation => new Date(donation.date).toLocaleDateString()),
            datasets: [{
              label: 'Donation Amount',
              backgroundColor: 'rgba(75, 192, 192, 0.2)',
              borderColor: 'rgba(75, 192, 192, 1)',
              borderWidth: 1,
              data: data1.map(donation => donation.amount),
            }],
          };
        }
  
        // Extract month labels and amounts for the chart
        const groupedData = data2.reduce((accumulator, donation) => {
          const monthYear = new Date(donation.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long' });
          if (!accumulator[monthYear]) {
            accumulator[monthYear] = 0;
          }
          accumulator[monthYear] += donation.amount;
          return accumulator;
        }, {});
  
        const months = Object.keys(groupedData);
        const amounts = Object.values(groupedData);
  
        const chartData2 = {
          labels: months,
          datasets: [{
            label: 'Donation Amount',
            backgroundColor: 'rgba(75, 192, 192, 0.2)',
            borderColor: 'rgba(75, 192, 192, 1)',
            borderWidth: 1,
            data: amounts,
          }],
        };
  
        // Get the canvas elements and create charts
        const ctx1 = document.getElementById('dayChart').getContext('2d');
        const chart1 = new Chart(ctx1, {
          type: 'bar',
          data: chartData1,
          options: {
            scales: {
              y: {
                beginAtZero: true,
              },
            },
          },
        });
  
        const ctx2 = document.getElementById('monthChart').getContext('2d');
        const chart2 = new Chart(ctx2, {
          type: 'bar',
          data: chartData2,
          options: {
            scales: {
              y: {
                beginAtZero: true,
              },
            },
          },
        });
      };
  
      // Initialize the charts
      updateChart();
    });
  </script>
  
  
