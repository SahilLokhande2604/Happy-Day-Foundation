      <h1>Edit and Add Data</h1>
      <!-- Display Existing Data in a Table -->
      <h2 class="mt-4">Existing Data</h2>
      <div class="container mt-4 ">
        <% for (const contentElement of data) { %>
          <div class="card mb-4 box_style">
            <div class="card-header">
              <h5 class="mb-0">
                <strong>Page: <span class="primary"><%= contentElement.page_name %></span>, Element: <span class="primary"><%= contentElement.element_name %></span></strong>
              </h5>
            </div>
            <div class="card-body">
              <h6 class="card-subtitle mb-2 text-muted"> <span class="primary">Title: <%= contentElement.top_title %></span>
              </h6>
              <!-- Description and Image in 2 Columns -->
              <div class="row">
                <div class="col-md-6">
                  <p class="card-text"><strong>Description: </strong>
                    <%= contentElement.top_description %>
                  </p>
                </div>
                
              </div>
              <!-- whatsapp number in row 3 -->
              <div class="row">
                <div class="col-md-6">
                  <p class="card-text"><strong>WhatsApp No.: </strong>
                    <span class="success"><%= contentElement.dynamicProperties.whatsappNo %></span>
                  </p>
                </div>
              </div>
              <!-- email 1 in row 4 -->
              <div class="row">
                <div class="col-md-6">
                  <p class="card-text"><strong>E-mail: </strong>
                    <span class="warning"><%= contentElement.dynamicProperties.email1  %></span>
                  </p>
                </div>
              </div>
              <!-- email 2 in row 5 -->
              <div class="row">
                <div class="col-md-6">
                  <p class="card-text"><strong>E-mail: </strong>
                    <span class="primary"><%= contentElement.dynamicProperties.email2  %></span>
                  </p>
                </div>
              </div>
              <!-- phone no. in row 6 -->
              <div class="row">
                <div class="col-md-6">
                  <p class="card-text"><strong>Phone No.: </strong>
                    <span class="danger"><%= contentElement.dynamicProperties.phoneNo %></span>
                  </p>
                </div>
              </div>



              <!-- Edit and Delete Buttons -->
              <div class="d-flex justify-content-between mt-3">
                <form action="/admin/edit_contact_details" method="get">
                  <input type="hidden" name="id" value="<%= contentElement._id %>">
                  <button type="submit" class="btn btn-primary primary-btn">Edit</button>
                </form>
                <form action="/admin/delete_home_page_data" method="post">
                  <input type="hidden" name="id" value="<%= contentElement._id %>">
                  <button type="submit" class="btn btn-danger danger-btn">Delete</button>
                </form>
              </div>

            </div>
          </div>
          <% } %>
      </div>




      <!-- Add New Data Form -->
      <div class="container mt-4 box_style">
        <h2 class="mt-4">Add New Data</h2>
        <form action="/admin/add_contact_details" method="post">
          <div class="form-group">
            <!-- Page Information -->
            <div class="mb-3">
              <label for="pageName">Page Name:</label>
              <input type="text" id="pageName" name="pageName" class="form-control" required
                value="page_name (e.g. home_page)">
            </div>

            <div class="mb-3">
              <label for="elementName">Element Name:</label>
              <input type="text" id="elementName" name="elementName" class="form-control" required
                value="element_name (e.g. home, about_us)">
            </div>

            <div class="mb-3">
              <label for="topTitle">Top Title:</label>
              <input type="text" id="topTitle" name="topTitle" class="form-control" value="">
            </div>

            <div class="mb-3">
              <label for="topDescription">Top Description:</label>
              <textarea id="topDescription" name="topDescription" class="form-control"></textarea>
            </div>


            <!-- Content data fields -->
            <div class="content-elements mb-3">
              <div class="content-element">
                <label for="contentElementName">Content Element Name:</label>
                <input type="text" id="contentElementName" name="contentElementName[]" class="form-control" required
                  value="content_element_name (e.g. partners,story)">

                <label for="whatsappNo">WhatsApp No.:</label>
                <input type="number" id="whatsappNo" name="whatsappNo" class="form-control" required value="">

                <label for="mail1">E-mail:</label>
                <input type="email" id="mail1" name="mail1" class="form-control" required value="">

                <label for="mail2">E-mail:</label>
                <input type="email" id="mail2" name="mail2" class="form-control" required value="">

                <label for="phoneNo">Phone No.:</label>
                <input type="number" id="phoneNo" name="phoneNo" class="form-control" required value="">

              </div>
            </div>

            <!-- Button to add more content elements -->
