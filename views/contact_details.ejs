    whatsappNoInput.name = 'whatsappNo[]'; // Adjust the name to an array
    whatsappNoInput.className = 'form-control'; // Add the 'form-control' class
    whatsappNoInput.required = true;
    newContentElement.appendChild(whatsappNoInput);

    const mail1Label = document.createElement('label');
    mail1Label.htmlFor = 'mail1';
    mail1Label.textContent = 'E-mail:';
    newContentElement.appendChild(mail1Label);

    const mail1Input = document.createElement('input');
    mail1Input.type = 'email';
    mail1Input.name = 'mail1[]'; // Adjust the name to an array
    mail1Input.className = 'form-control'; // Add the 'form-control' class
    mail1Input.required = true;
    newContentElement.appendChild(mail1Input);

    const mail2Label = document.createElement('label');
    mail2Label.htmlFor = 'mail2';
    mail2Label.textContent = 'E-mail:';
    newContentElement.appendChild(mail2Label);

    const mail2Input = document.createElement('input');
    mail2Input.type = 'email';
    mail2Input.name = 'mail2[]'; // Adjust the name to an array
    mail2Input.className = 'form-control'; // Add the 'form-control' class
    mail2Input.required = true;
    newContentElement.appendChild(mail2Input);

    const phoneNoLabel = document.createElement('label');
    phoneNoLabel.htmlFor = 'phoneNo';
    phoneNoLabel.textContent = 'Phone No.:';
    newContentElement.appendChild(phoneNoLabel);

    const phoneNoInput = document.createElement('input');
    phoneNoInput.type = 'number';
    phoneNoInput.name = 'phoneNo[]'; // Adjust the name to an array
    phoneNoInput.className = 'form-control'; // Add the 'form-control' class
    phoneNoInput.required = true;
    newContentElement.appendChild(phoneNoInput);

    // Update element IDs to ensure uniqueness
    const index = contentElementsContainer.children.length + 1;
    newContentElement.querySelectorAll('[name]').forEach((element) => {
      element.name = element.name.replace(/\[\d+\]/, `[${index}]`);
    });

    // Append the new content element to the container
    contentElementsContainer.appendChild(newContentElement);
  });
</script>


